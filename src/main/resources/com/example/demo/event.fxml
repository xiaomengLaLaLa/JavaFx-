<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import java.lang.String?>
<AnchorPane fx:controller="com.example.demo.controller.UserFormController" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styles/base.css">
    <children>
        <!-- 添加一个 HBox 用于放置按钮 -->
        <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddAction" text="添加" styleClass="button"/>
                <Button mnemonicParsing="false" onAction="#handleEditAction" text="编辑" styleClass="button"/>
                <Button mnemonicParsing="false" onAction="#handleDeleteAction" text="删除" styleClass="button"/>
            </children>
        </HBox>

        <!-- 调整 TableView 的样式和位置 -->
        <TableView fx:id="tableView" editable="true" onMouseClicked="#handleTableClick" AnchorPane.topAnchor="150.0"
                   AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columns>
                <TableColumn fx:id="usernameColumn" text="用户名" minWidth="150.0" prefWidth="200.0"/>
                <TableColumn fx:id="emailColumn" text="邮箱" minWidth="150.0" prefWidth="200.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <styleClass>
                <String fx:value="table-view"/>
            </styleClass>
        </TableView>
    </children>
</AnchorPane>